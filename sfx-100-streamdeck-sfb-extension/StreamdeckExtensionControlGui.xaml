        <ListBox x:Name="debugBox" HorizontalAlignment="Stretch" Margin="10,86,557,10"/>
        <Button Content="Save Log" HorizontalAlignment="Left" Margin="398,38,0,0" VerticalAlignment="Top" Width="133" Click="Button_Click"/>
